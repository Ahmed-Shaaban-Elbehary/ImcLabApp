@model ImcLabApp.Models.Users
@{
    ViewBag.Title = "مستخدم";
    Layout = "~/Views/Shared/_LandingPage.cshtml";
}
<!DOCTYPE html>
<html>
<body>
    <div class="login">
        <div class="login_form">
            <div class="container">
                <div class="icon">
                    <img src="~/images/path817.png" />
                </div>
                <div dir="rtl" class="form text-right">
                    @using (Html.BeginForm("login", "Login", FormMethod.Post))
                    {
                        <label class="field-validation-error text-right">@ViewBag.errorMessage</label>
                        <div class="form-group">
                            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "أدخل إسم المستخدم" } })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "أدخل الرقم السري" } })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <input class="btn btn-block btn-primary" type="submit" value="دخول" />
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
